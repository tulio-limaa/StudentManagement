@model IEnumerable<StudentManagement.Models.Student>

@if (Model == null || !Model.Any())
{
    <p>No students available.</p>
}
else
{
    <h1>Students List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Course</td>
                </tr>
            }
        </tbody>
    </table>
}
